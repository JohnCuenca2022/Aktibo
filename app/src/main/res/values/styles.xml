<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Text Input-->
    <style name="CustomTextInputLayout.Light" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/green</item>

        <!--Box Border Radius-->
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>

        <!--Hint-->
        <item name="hintTextColor">@color/green</item>
    </style>

    <style name="CustomMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/off_white</item>
        <item name="strokeColor">@color/black</item>
    </style>

    <style name="CustomMaterialButtonFood" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/off_white</item>
        <item name="strokeColor">@color/green</item>
    </style>

    <style name="circularDeterminateProgressBarGreen" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:indeterminateOnly">false</item>
        <item name="trackCornerRadius">20dp</item>
        <item name="indicatorColor">@color/green</item>
        <item name="trackColor">#3363A91F</item>
        <item name="trackThickness">12dp</item>
    </style>

    <style name="circularDeterminateProgressBarGreenSmall" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:indeterminateOnly">false</item>
        <item name="trackCornerRadius">20dp</item>
        <item name="indicatorColor">@color/green</item>
        <item name="trackColor">#3363A91F</item>
        <item name="trackThickness">10dp</item>
    </style>

    <style name="circularDeterminateProgressBarOrange" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:indeterminateOnly">false</item>
        <item name="trackCornerRadius">20dp</item>
        <item name="indicatorColor">@color/orange</item>
        <item name="trackColor">#33FF7F11</item>
        <item name="trackThickness">12dp</item>
    </style>

    <style name="circularDeterminateProgressBarYellow" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:indeterminateOnly">false</item>
        <item name="trackCornerRadius">20dp</item>
        <item name="indicatorColor">@color/yellow</item>
        <item name="trackColor">#33FF7F11</item>
        <item name="trackThickness">12dp</item>
    </style>

    <style name="CustomCalendarView">
        <item name="android:background">@drawable/custom_calendar_background</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>

    <style name="mySpinnerItemStyle" parent="">
        <item name="android:colorForeground">@color/off_white</item>
    </style>

    <style name="MaterialButtonStyleChanging" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/color_states_materialbutton</item>
    </style>



    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="colorSurface">@color/secondary</item>
        <item name="colorOnSurface">@color/secondary</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/primary</item>
    </style>
</resources>