<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/off_white" /> <!-- White outline color -->
            <corners android:topLeftRadius="16dp" android:bottomLeftRadius="16dp" /> <!-- Rounded corners for the whole shape -->
        </shape>
    </item>

    <item android:bottom="1dp" android:left="1dp" android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/off_black" />
            <corners android:topLeftRadius="16dp" android:bottomLeftRadius="16dp"/>
        </shape>
    </item>
</layer-list>
