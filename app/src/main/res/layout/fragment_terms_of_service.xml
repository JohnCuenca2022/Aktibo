<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TermsOfServiceFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:text="Terms of Service for\nAktibo Social Media Moments Feature"
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start|center"
                android:fontFamily="@font/roboto"
                android:text="Last Updated: November 12, 2023"
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto"
                android:text='\t\t\t\t\tWelcome to Aktibo! These Terms of Service ("Terms") govern your use of the social media feature ("Feature") provided by Aktibo ("we," "us," or "our"). By accessing or using the Feature, you agree to comply with and be bound by these Terms.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_medium"
                android:text='1. Acceptance of Terms'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_italic"
                android:text='\t\t\t\t\tBy using the Feature, you agree to be bound by these Terms. If you do not agree to these Terms, please do not use the Feature.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_medium"
                android:text='2. Eligibility'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_italic"
                android:text='\t\t\t\t\tYou must be at least 13 years old to use the Feature. By using the Feature, you represent and warrant that you meet the eligibility requirements.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_medium"
                android:text='3. User Content'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_italic"
                android:text='\t\t\t\t\t3.1. Posting Content: You are solely responsible for the content you post through the Feature. You agree not to post content that is illegal, defamatory, infringing, or otherwise violates these Terms.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_italic"
                android:text='\t\t\t\t\t3.2. Rights to User Content: By posting content, you grant Aktibo a non-exclusive, royalty-free, worldwide, irrevocable, sublicensable, and transferable license to use, reproduce, distribute, prepare derivative works of, display, and perform your content in connection with the Feature.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_medium"
                android:text='4. Code of Conduct'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_italic"
                android:text='\t\t\t\t\t4.1. Prohibited Conduct: You agree not to engage in any conduct that violates these Terms, including but not limited to harassment, impersonation, or any form of harmful behavior.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_italic"
                android:text='\t\t\t\t\t4.2. Reporting Violations: If you believe another user is violating these Terms, please report it to our provided contact information below.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_medium"
                android:text='5. Intellectual Property'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_italic"
                android:text='\t\t\t\t\tThe Feature, including but not limited to text, graphics, trademarks, and logos, is the property of Aktibo and is protected by intellectual property laws. You may not use, reproduce, or distribute any part of the Feature without our express written permission.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_medium"
                android:text='6. Termination'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_italic"
                android:text='\t\t\t\t\tWe reserve the right to terminate or suspend your access to the Feature at our discretion, without notice, for any reason, including if you violate these Terms.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_medium"
                android:text='7. Disclaimer of Warranties'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_italic"
                android:text='\t\t\t\t\tThe Feature is provided "as is" and "as available" without warranties of any kind, whether express or implied. We do not warrant that the Feature will be error-free or uninterrupted.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_medium"
                android:text='8. Limitation of Liability'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_italic"
                android:text='\t\t\t\t\tTo the fullest extent permitted by law, Aktibo shall not be liable for any indirect, incidental, special, consequential, or punitive damages arising out of or in connection with your use of the Feature.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_medium"
                android:text='9. Governing Law'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_italic"
                android:text='\t\t\t\t\tThese Terms are governed by and construed in accordance with the laws of the Republic of the Philippines.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_medium"
                android:text='10. Changes to Terms'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_italic"
                android:text='\t\t\t\t\tWe reserve the right to modify or update these Terms at any time. Your continued use of the Feature after such modifications constitutes your acceptance of the updated Terms.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_bold"
                android:text='By accepting these terms, you agree to abide by the specified rules, conditions, and policies outlined herein, governing the use of the provided services or products.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="40dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <Button
                        android:id="@+id/declineButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Decline"
                        android:gravity="center"
                        style="?attr/materialButtonOutlinedStyle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <Button
                        android:id="@+id/acceptButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accept"
                        android:layout_marginStart="60dp"
                        style="@style/Widget.MaterialComponents.Button"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/declineButton"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>