<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeightGoalFragment">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="Exercise Goal"
        android:alpha="0.7"
        android:textColor="@color/primary"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        android:background="@drawable/tablerow_outline_background"
        app:layout_constraintBottom_toTopOf="@id/weightGoalLayout">

        <LinearLayout
            android:id="@+id/layoutWeightRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewNoRecords"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="There are no records"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/primary"
                    android:layout_marginTop="20dp"/>

            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/weightGoalLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/textViewExerciseRecordsInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perform exercise routines to create new records"
            android:drawableStart="@drawable/info_icon"
            android:gravity="center"
            android:fontFamily="@font/roboto_italic"
            android:textColor="@color/primary"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"/>

        <FrameLayout
            android:id="@+id/mealRecipesButtonFrame"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewExerciseRecordsInfo"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageButton
                android:contentDescription="weight goal button"
                android:id="@+id/exerciseGoalButton"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:scaleType="centerInside"
                android:src="@drawable/exercise_goal_button"
                android:background="@color/transparent"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/textViewMealRecipesButton"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="Change Your Exercise Goal"
                android:textColor="@color/primary"
                android:textSize="18sp" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>