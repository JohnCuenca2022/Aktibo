<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MealRecipeFragment">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:alpha="0.7"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="Meal Recipes"
        android:textColor="@color/primary"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/moreButton"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:background="@color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/vertical_ellipsis" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/textViewExerciseNameLoader"
        android:layout_width="300dp"
        android:minWidth="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text=""
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:textSize="22sp"
        app:width_weight="1"
        app:height_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle" />

    <TextView
        android:id="@+id/textViewExerciseName"
        android:layout_width="300dp"
        android:minWidth="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="Vegetable Stir-Fry with Brown Rice"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:textSize="22sp"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        app:autoSizeMinTextSize="11sp"
        app:autoSizeMaxTextSize="22sp"
        app:autoSizeStepGranularity="1sp"
        android:visibility="invisible"
        app:width_weight="1"
        app:height_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrantLayoutMacros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewExerciseName">
        <LinearLayout
            android:id="@+id/layoutMacros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center">

            <TextView
                android:id="@id/textViewCalories"
                android:layout_width="90dp"
                android:layout_height="69dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="0g\nCalories"
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:padding="10dp" />

            <TextView
                android:id="@id/textViewCarbs"
                android:layout_width="70dp"
                android:layout_height="69dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="0g\nCarbs"
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:padding="10dp" />

            <TextView
                android:id="@id/textViewProtein"
                android:layout_width="80dp"
                android:layout_height="69dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="0g\nProtein"
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:padding="10dp" />

            <TextView
                android:id="@id/textViewFat"
                android:layout_width="60dp"
                android:layout_height="69dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="0g\nFat"
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:padding="10dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/servingSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="per serving (1 serving/s)"
            android:textColor="@color/primary"
            android:textSize="14sp"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            app:autoSizeMinTextSize="11sp"
            app:autoSizeMaxTextSize="22sp"
            app:autoSizeStepGranularity="1sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutMacros"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:layout_marginTop="40dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constrantLayoutMacros">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewIngredientsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center|start"
                android:text="Ingredients: "
                android:textColor="@color/primary"
                android:textSize="16sp"
                app:width_weight="0.6"
                app:height_weight="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:id="@+id/layoutIngredients"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewRepSets" >

                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginBottom="5dp"
                    app:width_weight="1"
                    app:height_weight="1" />
                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginBottom="5dp"
                    app:width_weight="1"
                    app:height_weight="1" />
                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginBottom="5dp"
                    app:width_weight="1"
                    app:height_weight="1" />
                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginBottom="5dp"
                    app:width_weight="1"
                    app:height_weight="1" />
                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginBottom="5dp"
                    app:width_weight="1"
                    app:height_weight="1" />
                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginBottom="5dp"
                    app:width_weight="1"
                    app:height_weight="1" />
                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginBottom="5dp"
                    app:width_weight="1"
                    app:height_weight="1" />

            </LinearLayout>

            <TextView
                android:id="@+id/textViewRepSets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center|start"
                android:text="Instructions:"
                android:textColor="@color/primary"
                android:textSize="16sp"
                app:width_weight="0.6"
                app:height_weight="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:id="@+id/layoutInstructions"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewRepSets" >

                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginBottom="5dp"
                    app:width_weight="1"
                    app:height_weight="1" />
                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginBottom="5dp"
                    app:width_weight="1"
                    app:height_weight="1" />
                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginBottom="5dp"
                    app:width_weight="1"
                    app:height_weight="1" />
                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginBottom="5dp"
                    app:width_weight="1"
                    app:height_weight="1" />
                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginBottom="5dp"
                    app:width_weight="1"
                    app:height_weight="1" />
                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginBottom="5dp"
                    app:width_weight="1"
                    app:height_weight="1" />
                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginBottom="5dp"
                    app:width_weight="1"
                    app:height_weight="1" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>