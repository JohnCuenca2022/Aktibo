<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataPrivacy">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:text="Aktibo Mobile App Data Privacy Notice"
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto"
                android:text='\t\t\tThank you for choosing Aktibo, the mobile app designed to help you stay active and healthy. At Aktibo, we are committed to protecting your privacy and ensuring the security of your personal information. This Data Privacy Notice explains how we collect, use, and protect your data when you use our mobile application.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_medium"
                android:text='1. Information We Collect'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_italic"
                android:text='\t\t\tWhen you use Aktibo, we may collect the following types of information:'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_medium"
                android:text='Personal Information:'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_italic"
                android:text='This may include your name, email address, age, gender, and other demographic information you provide when setting up your account.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_medium"
                android:text='Health and Activity Data:'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_italic"
                android:text='Aktibo may collect data related to your physical activity, such as steps taken, distance traveled, calories burned, and other fitness-related metrics.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_medium"
                android:text='Device Information:'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_italic"
                android:text='We may collect information about your mobile device, including its unique device identifier, operating system, and other technical details necessary for the app to function properly.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_medium"
                android:text='Usage Data:'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_italic"
                android:text='Aktibo may gather information about how you interact with the app, including which features you use, the frequency of your usage, and any errors encountered during your session.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_medium"
                android:text='2. How We Use Your Information'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_italic"
                android:text='\t\t\tWe use the information collected through Aktibo for the following purposes:'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_italic"
                android:text='\t\t\tTo provide and personalize the features and content of the app to enhance your experience.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_italic"
                android:text='\t\t\tTo track your fitness and activity progress, providing you with insights and feedback to help you achieve your health goals.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_italic"
                android:text='\t\t\tTo communicate with you regarding updates, news, and promotions related to Aktibo, if you have opted in to receive such communications.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_italic"
                android:text='\t\t\tTo improve our app and develop new features based on user feedback and usage patterns.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_medium"
                android:text='3. Data Privacy and Security'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_italic"
                android:text='\t\t\tWe are committed to protecting your personal information and ensuring its confidentiality. We implement appropriate technical and organizational measures to safeguard your data against unauthorized access, alteration, disclosure, or destruction.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_medium"
                android:text='4. Data Sharing'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_italic"
                android:text='\t\t\tWe do not sell, trade, or otherwise transfer your personal information to third parties without your consent, except as required by law or as necessary to provide the services you have requested.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_medium"
                android:text='5. Your Choices and Rights'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_italic"
                android:text='\t\t\tYou have the right to access, correct, or delete the personal information we hold about you. You may also choose to disable certain data collection features within the app settings.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_medium"
                android:text='6. Updates to this Privacy Notice'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_italic"
                android:text='\t\t\tWe may update this Privacy Notice from time to time to reflect changes in our practices or in applicable laws. We encourage you to review this notice periodically for any updates.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_medium"
                android:text='7. Contact Us'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_italic"
                android:text='\t\t\tIf you have any questions, concerns, or requests regarding this Privacy Notice or our data practices, please contact us at aktibo-support@ust.edu.ph.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:fontFamily="@font/roboto_italic"
                android:text='\t\t\tBy using Aktibo, you consent to the collection and use of your information as outlined in this Privacy Notice. Thank you for entrusting us with your data as we strive to help you lead a healthier, more active lifestyle.'
                android:textColor="@color/primary"
                android:textSize="15sp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="40dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <Button
                        android:id="@+id/acceptButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accept"
                        android:layout_marginStart="60dp"
                        style="@style/Widget.MaterialComponents.Button"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>