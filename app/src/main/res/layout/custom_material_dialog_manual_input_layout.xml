<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/secondary"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/closeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@color/transparent"
                android:src="@drawable/close_button" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Food Record"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="24sp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/primary"
                app:layout_constraintTop_toBottomOf="@+id/closeButton"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Input your food"
                android:gravity="center"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/primary"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food Name"
                android:gravity="center"
                android:layout_marginTop="18dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/primary"
                app:layout_constraintTop_toBottomOf="@+id/textView2"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TextInputLayoutFoodBane"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:endIconMode="clear_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/foodName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ex. Brown Rice"
                    android:gravity="start"
                    android:maxLength="25"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textViewCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calories"
                android:gravity="center"
                android:layout_marginTop="18dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/primary"
                app:layout_constraintTop_toBottomOf="@+id/TextInputLayoutFoodBane"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TextInputLayoutCalories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:endIconMode="clear_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewCarbs">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/calories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ex. 248"
                    android:gravity="start"
                    android:maxLength="25"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textViewCarbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carbohydrates (g)"
                android:gravity="center"
                android:layout_marginTop="18dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/primary"
                app:layout_constraintTop_toBottomOf="@+id/TextInputLayoutFoodBane"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TextInputLayoutCarbs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:endIconMode="clear_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewCarbs">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/carbs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ex. 51.7"
                    android:gravity="start"
                    android:maxLength="25"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textViewProtein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protein (g)"
                android:gravity="center"
                android:layout_marginTop="18dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/primary"
                app:layout_constraintTop_toBottomOf="@+id/TextInputLayoutCarbs"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TextInputLayoutProtein"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:endIconMode="clear_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewProtein">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/protein"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ex. 5.54"
                    android:gravity="start"
                    android:maxLength="25"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textViewFat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fat (g)"
                android:gravity="center"
                android:layout_marginTop="18dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/primary"
                app:layout_constraintTop_toBottomOf="@+id/TextInputLayoutProtein"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TextInputLayoutFats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:endIconMode="clear_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewFat">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ex. 1.96"
                    android:gravity="start"
                    android:maxLength="25"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_confirm"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="30dp"
                android:text="Confirm"
                android:textColor="@color/white"
                app:backgroundTint="@color/green"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TextInputLayoutFats"
                app:textAllCaps="false" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>